<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/show_ad_top_left_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/show_ad_top_left_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/show_ad_top_left_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="标题"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <com.ifspace.advertising.widget.MaequeeText
                android:id="@+id/show_ad_top_left_scrolltext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:gravity="center_horizontal"
                android:text="测试测试测试测试测试测试测试测试测试"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/show_ad_top_right_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/show_ad_top_right_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/show_ad_top_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="标题"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <com.ifspace.advertising.widget.MaequeeText
                android:id="@+id/show_ad_top_right_scrolltext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:gravity="center_horizontal"
                android:text="测试测试测试测试测试测试测试测试测试"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/show_ad_bottom_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/show_ad_bottom_left_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/show_ad_bottom_left_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/show_ad_bottom_left_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="标题"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <com.ifspace.advertising.widget.MaequeeText
                android:id="@+id/show_ad_bottom_left_scrolltext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:gravity="center_horizontal"
                android:text="测试测试测试测试测试测试测试测试测试"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/show_ad_bottom_right_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/show_ad_bottom_right_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/show_ad_bottom_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="标题"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <com.ifspace.advertising.widget.MaequeeText
                android:id="@+id/show_ad_bottom_right_scrolltext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:gravity="center_horizontal"
                android:text="测试测试测试测测试测试测试测试"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>